{
  "name": "rwidaccess",
  "version": "1.0.0",
  "description": "Remote desktop application like TeamViewer",
  "scripts": {
    "dev:server": "tsx watch server/src/index.ts",
    "dev:client": "electron .",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "electron-builder",
    "start:server": "node server/dist/index.js"
  },
  "main": "client/main.js",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1",
    "simple-peer": "^9.11.1",
    "uuid": "^9.0.1",
    "ws": "^8.15.1"
  },
  "build": {
    "appId": "com.rwidaccess.app",
    "productName": "RWIDAccess",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
